<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/help_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="各种按钮功能：1、点击按钮添加"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:srcCompat="@drawable/help_image1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2、从相册选择一张照片"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help_image2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="3、选择压缩尺寸"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help_image3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="4、选择压缩质量"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image4"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help_image4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="批量选择图片"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image5"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help_image5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="批量压缩后的图片浏览"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_image6"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help_image6" />

    </LinearLayout>
</ScrollView>